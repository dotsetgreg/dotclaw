{
  "host": {
    "logLevel": "info",
    "container": {
      "mode": "daemon"
    },
    "metrics": {
      "port": 3001,
      "enabled": true
    },
    "dashboard": {
      "enabled": true
    },
    "memory": {
      "embeddings": {
        "enabled": true
      }
    },
    "backgroundJobs": {
      "enabled": true,
      "maxConcurrent": 2,
      "maxRuntimeMs": 2400000
    }
  },
  "agent": {
    "assistantName": "Rain",
    "promptPacks": {
      "enabled": true
    },
    "planner": {
      "enabled": true,
      "mode": "auto"
    }
  }
}
